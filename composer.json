{
	"name": "wikimedia/object-factory",
	"description": "Construct objects from configuration instructions",
	"license": "GPL-2.0-or-later",
	"homepage": "https://www.mediawiki.org/wiki/ObjectFactory",
	"authors": [
		{
			"name": "Bryan Davis",
			"email": "bdavis@wikimedia.org"
		}
	],
	"autoload": {
		"psr-4": {
			"Wikimedia\\ObjectFactory\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Wikimedia\\ObjectFactory\\Test\\": "tests/"
		}
	},
	"require": {
		"php": ">=7.4.3",
		"psr/container": "~1.1.1 || ~2.0.2"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "45.0.0",
		"mediawiki/mediawiki-phan-config": "0.15.0",
		"mediawiki/minus-x": "1.1.3",
		"ockcyp/covers-validator": "1.6.0",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0",
		"phpunit/phpunit": "9.6.21"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit",
			"covers-validator",
			"@phpcs",
			"@phan",
			"minus-x check ."
		],
		"cover": "phpunit --coverage-html coverage",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"phan": "phan --allow-polyfill-parser",
		"phpcs": "phpcs -sp"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
